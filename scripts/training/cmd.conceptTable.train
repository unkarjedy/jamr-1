#!/bin/bash
# assumes `config.sh` has already been sourced
INPUT="$TRAIN_FILE"
OUTPUT="$MODEL_DIR/conceptTable.train"

mkdir -p $MODEL_DIR
"${JAMR_HOME}/run" ExtractConceptTable ${CONCEPT_EXTRACT_OPTIONS} \
    < "$INPUT".aligned \
    > "$OUTPUT" \
    2> "${OUTPUT}.err"

cat "$INPUT".snt.tok | \
    wf | \
    awk '{print $2,$1}' \
    > "$MODEL_DIR/wordCounts.train"

